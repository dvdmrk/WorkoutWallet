@model Web.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Profile</h1>

<hr />
<div class="row">
    <div class="col-lg-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <h5>Height:</h5>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Feet" class="control-label"></label>
                    <input asp-for="Feet" class="form-control" />
                    <span asp-validation-for="Feet" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Inches" class="control-label"></label>
                    <input asp-for="Inches" class="form-control" />
                    <span asp-validation-for="Inches" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstagramUrl" class="control-label"></label>
                <input asp-for="InstagramUrl" class="form-control" />
                <span asp-validation-for="InstagramUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
